#!/usr/bin/env bash

set -e

_mergebase=$(git merge-base origin/master HEAD)
_pyfiles=$(git diff --name-only "${_mergebase}" | grep "\.py")
for _pyfile in $_pyfiles; do
  pyflakes "$(git rev-parse --show-toplevel)/${_pyfile}"
  echo $'\n^^^' "${_pyfile}" $'(return to continue)\n'
  read -r
done
unset _pyfile
