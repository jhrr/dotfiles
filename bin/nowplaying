#!/usr/bin/bash

A_FORMAT="%artist%"
T_FORMAT="%title%[ (%album%)]"
NOTIFY_TITLE="Now Playing: "

file="$(mpc current -f %file%)"

[[ -z "$file" ]] &&
  exit 1

title="$(mpc current -f "$A_FORMAT")"
song="$(mpc current -f "$T_FORMAT")"

dunstify -t 5000 -h string:bgcolor:#78AB46 "$NOTIFY_TITLE" "$title\n$song"
