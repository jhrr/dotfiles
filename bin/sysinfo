#!/usr/bin/env bash

FONT="inconsolata"
FONTSIZE="14"
ACT='onstart=uncollapse;button1=exit;button2=exit'

# Colors
FG="#ffffff"
BG="#202020"

WIDTH=300
LINES=6
XPOS=1000
YPOS=20

HOST=$(uname -n)
KERNEL=$(uname -r)
UPTIME=$(uptime \
              | sed 's/.* up //' \
              | sed 's/[0-9]* us.*//' \
              | sed 's/ day, /d /' \
              | sed 's/ days, /d /' \
              | sed 's/:/h /' \
              | sed 's/ min//' \
              | sed 's/,/m/' \
              | sed 's/  / /' \
      )
PACKAGES=$(pacman -Q | wc -l)
UPDATED=$(awk '/upgraded/ {line=$0;} END { $0=line; gsub(/[\[\]]/,"",$0); printf "%s %s",$1,$2;}' /var/log/pacman.log)

(echo " " # The first line goes to title.
 # The following lines go to slave window.
 echo "   User: $(id -un)@${HOST} "
 echo "   Kernel: ${KERNEL}"
 echo "   Uptime:${UPTIME}"
 echo "   Pacman: ${PACKAGES} packages"
 echo "   Last Updated: ${UPDATED}"
) | dzen2 -p \
          -bg $BG -fg $FG \
          -fn "${FONT}:pixelsize=${FONTSIZE}" \
          -x $XPOS -y $YPOS \
          -w $WIDTH \
          -l $LINES \
          -sa 'l' \
          -e "$ACT";
